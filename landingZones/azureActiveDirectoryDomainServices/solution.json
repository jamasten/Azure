  "contentVersion": "1.0.0.0",
  "parameters": {
    "DomainName": {
      "type": "string",
      "defaultValue": "jasonmasten.com"
    },
    "Environment": {
      "type": "string",
      "defaultValue": "d"
    },
    "Instance": {
      "type": "string",
      "defaultValue": "000"
    },
    "Location": {
      "type": "string",
      "defaultValue": "eastus"
    },
    "LocationAbbr": {
      "type": "string",
      "defaultValue": "eu"
    },
    "ProjAppSvc": {
      "type": "array",
      "defaultValue": [
        "id",
        "net"
      ]
    },
    "Timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('yyyyMMddhhmmss')]"
    },
    "UnitDept": {
