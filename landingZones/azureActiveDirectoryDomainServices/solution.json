          "contentVersion": "1.0.0.0",
          "parameters": {
            "DomainName": {
              "type": "string"
            },
            "Location": {
              "type": "string"
            },
            "ResourceGroupNames": {
              "type": "array"
            },
            "VnetName": {
              "type": "string"
            }
          },
