    "PublicIpAddressName": "[concat('pip-bastion-', parameters('UnitDept'),'-', parameters('ProjAppSvc')[1], parameters('Environment'), '-', parameters('LocationAbbr'), '-', parameters('Instance'))]",
    "ResourceGroupNames": [
