                        }
                    }
                ],
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet-spoke', 'snet-spoke')]"
                },
                "customDnsConfigs": [
                    {
                        "fqdn": "[concat('storwvd', parameters('StorageSuffix'),'.file.core.windows.net')]",
                        "ipAddresses": [
                            "10.0.1.7"
                        ]
                    }
                ]
            }
        },
