{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "GalleryName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Shared Image Gallery."
            }
        },
        "IdentityName": {
            "type": "string",
            "metadata": {
                "description": "The name of the user assigned managed identity with the Azure Image Builder permissions."
            }
        },
        "ImageDefinitionName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Image Definition in the Shared Image Gallery."
            }
        },
        "ImageTemplateName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Image Template for Azure Image Builder."
            }
        },
        "Location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "SubnetId": {
            "type": "string",
            "metadata": {
                "description": "The resource ID of the target Azure Subnet."
            }
        },
        "Timestamp": {
            "type": "string",
            "defaultValue": "[utcNow('yyyyMMddhhmmss')]"
        }
    },
    "variables": {
        "SubnetId": {
            "subnetId": "[parameters('SubnetId')]"
        },
        "VnetConfig": "[if(equals(parameters('SubnetId'), json('null')), json('null'), variables('SubnetId'))]"
    },
    "resources": [
        {
            "comments": "---------- SHARED IMAGE GALLERY ----------",
            "name": "[parameters('GalleryName')]",
            "type": "Microsoft.Compute/galleries",
            "apiVersion": "2019-03-01",
            "location": "[parameters('Location')]",
            "tags": {},
            "properties": {
                "description": "",
                "identifier": {}
            },
            "resources": [
                {
                    "comments": "---------- IMAGE DEFINITION ----------",
                    "name": "[parameters('ImageDefinitionName')]",
                    "type": "images",
                    "apiVersion": "2019-03-01",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[parameters('GalleryName')]"
                    ],
                    "tags": {},
                    "properties": {
                        "osType": "Windows",
                        "osState": "Generalized",
                        "identifier": {
                            "publisher": "MicrosoftWindowsDesktop",
                            "offer": "office-365",
                            "sku": "20h2-evd-o365pp"
                        }
                    }
                }
            ]
        },
        {
            "comments": "---------- IMAGE BUILDER TEMPLATE ----------",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "name": "[parameters('ImageTemplateName')]",
            "apiVersion": "2020-02-14",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[parameters('GalleryName')]",
                "[parameters('ImageDefinitionName')]"
            ],
            "tags": {},
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('IdentityName'))]": {}
                }
            },
            "properties": {
                "buildTimeoutInMinutes": 120,
                "vmProfile": {
                    "vmSize": "Standard_D2_v2",
                    "osDiskSizeGB": 127,
                    "vnetConfig": "[variables('VnetConfig')]"
                },
                "source": {
                    "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "office-365",
                    "sku": "20h2-evd-o365pp",
                    "version": "latest"
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "Install Teams",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/jamasten/Azure/master/solutions/imageBuilder/scripts/1_installTeams.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Teams Install'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ]
                    }

                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "galleryImageId": "[concat(subscription().id, '/resourceGroups/rg-shared-d-eastus/providers/Microsoft.Compute/galleries/', parameters('GalleryName'),'/images/', parameters('ImageDefinitionName'))]",
                        "runOutputName": "[parameters('Timestamp')]",
                        "artifactTags": {},
                        "replicationRegions": [
                            "[parameters('Location')]"
                        ],
                        "storageAccountType": "Standard_LRS"
                    }
                ]
            }
        }
    ]
}
