{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "CustomVnet": {
            "type": "bool"
        },
        "IdentityName": {
            "type": "string"
        },
        "ImageDefinitionName": {
            "type": "string"
        },
        "ImageDefinitionOffer": {
            "type": "string"
        },
        "ImageDefinitionPublisher": {
            "type": "string"
        },
        "ImageDefinitionSku": {
            "type": "string"
        },
        "ImageDefinitionVersion": {
            "type": "string"
        },
        "ImageStorageAccountType": {
            "type": "string"
        },
        "ImageTemplateName": {
            "type": "string"
        },
        "Location": {
            "type": "string"
        },
        "RoleImageContributor": {
            "type": "string"
        },
        "RoleVirtualNetworkJoin": {
            "type": "string"
        },
        "SharedImageGalleryName": {
            "type": "string"
        },
        "SubnetName": {
            "type": "string"
        },
        "Timestamp": {
            "type": "string"
        },
        "VirtualMachineSize": {
            "type": "string"
        },
        "VirtualNetworkName": {
            "type": "string"
        },
        "VirtualNetworkResourceGroupName": {
            "type": "string"
        }
    },
    "variables": {
        "RgId": "[resourceGroup().id]",
        "VmProfileWithoutVnet": {
            "vmSize": "[parameters('VirtualMachineSize')]"
        },
        "VmProfileWithVnet": {
            "vmSize": "[parameters('VirtualMachineSize')]",
            "vnetConfig": {
                "subnetId": "[resourceId(subscription().subscriptionId, parameters('VirtualNetworkResourceGroupName'), 'Microsoft.Network/virtualNetworks/subnets', parameters('VirtualNetworkName'), parameters('SubnetName'))]"
            }
        },
        "VmProfile": "[if(equals(parameters('SubnetName'), ''), variables('VmProfileWithoutVnet'), variables('VmProfileWithVnet'))]"
    },
    "resources": [
        {
            "comments": "---------- USER ASSIGNED MANAGED IDENTITY ----------",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "name": "[parameters('IdentityName')]",
            "apiVersion": "2018-11-30",
            "location": "[parameters('Location')]",
            "dependsOn": []
        },
        {
            "comments": "---------- ROLE ASSIGNMENT > IMAGE CONTRIBUTOR ----------",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "483faf2b-68d9-4b31-a890-b6394e949092",
            "dependsOn": [
                "[parameters('IdentityName')]"
            ],
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', parameters('RoleImageContributor'))]",
                "principalId": "[reference(concat(variables('RgId'), '/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('IdentityName')), '2018-11-30', 'Full').properties.principalId]",
                "scope": "[variables('RgId')]"
            }
        },
        {
            "comments": "---------- ROLE ASSIGNMENT > VIRTUAL NETWORK JOIN ----------",
            "condition": "[parameters('CustomVnet')]",
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2017-09-01",
            "name": "8f86a747-5ec8-48bc-86d0-d0915160e07d",
            "dependsOn": [],
            "properties": {
                "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', parameters('RoleVirtualNetworkJoin'))]",
                "principalId": "[reference(concat(variables('RgId'), '/providers/Microsoft.ManagedIdentity/userAssignedIdentities/', parameters('IdentityName')), '2018-11-30', 'Full').properties.principalId]",
                "scope": "[concat(subscription().id, '/resourceGroups/', parameters('VirtualNetworkResourceGroupName'))]"
            }
        },
        {
            "comments": "---------- SHARED IMAGE GALLERY ----------",
            "name": "[parameters('SharedImageGalleryName')]",
            "type": "Microsoft.Compute/galleries",
            "apiVersion": "2019-03-01",
            "location": "[parameters('Location')]",
            "tags": {},
            "properties": {
                "description": "",
                "identifier": {}
            },
            "resources": [
                {
                    "comments": "---------- IMAGE DEFINITION ----------",
                    "name": "[parameters('ImageDefinitionName')]",
                    "type": "images",
                    "apiVersion": "2019-03-01",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[parameters('SharedImageGalleryName')]"
                    ],
                    "tags": {},
                    "properties": {
                        "osType": "Windows",
                        "osState": "Generalized",
                        "identifier": {
                            "publisher": "[parameters('ImageDefinitionPublisher')]",
                            "offer": "[parameters('ImageDefinitionOffer')]",
                            "sku": "[parameters('ImageDefinitionSku')]"
                        }
                    }
                }
            ]
        },
        {
            "comments": "---------- IMAGE BUILDER TEMPLATE ----------",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "name": "[parameters('ImageTemplateName')]",
            "apiVersion": "2020-02-14",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[parameters('SharedImageGalleryName')]",
                "[parameters('ImageDefinitionName')]"
            ],
            "tags": {},
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('IdentityName'))]": {}
                }
            },
            "properties": {
                "buildTimeoutInMinutes": 300,
                "vmProfile": "[variables('VmProfile')]",
                "source": {
                    "type": "PlatformImage",
                    "publisher": "[parameters('ImageDefinitionPublisher')]",
                    "offer": "[parameters('ImageDefinitionOffer')]",
                    "sku": "[parameters('ImageDefinitionSku')]",
                    "version": "[parameters('ImageDefinitionVersion')]"
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "Install Teams",
                        "runElevated": true,
                        "runAsSystem": true,
                        "scriptUri": "https://raw.githubusercontent.com/jamasten/Azure/master/solutions/imageBuilder/scripts/1_installTeams.ps1"
                    },
                    {
                        "type": "WindowsRestart",
                        "restartCheckCommand": "write-host 'restarting post Teams Install'",
                        "restartTimeout": "5m"
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ]
                    }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "galleryImageId": "[concat(resourceGroup().id, '/providers/Microsoft.Compute/galleries/', parameters('SharedImageGalleryName'),'/images/', parameters('ImageDefinitionName'))]",
                        "runOutputName": "[parameters('Timestamp')]",
                        "artifactTags": {},
                        "replicationRegions": [
                            "[parameters('Location')]"
                        ],
                        "storageAccountType": "[parameters('ImageStorageAccountType')]"
                    }
                ]
            }
        }
    ]
}