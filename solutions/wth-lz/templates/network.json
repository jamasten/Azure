{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Environment": {
            "type": "string"
        },
        "Location": {
            "type": "string"
        }
    },
    "variables": {
        "nsg": "[concat('nsg-identity-', parameters('Environment'),'-', parameters('Location'))]"

    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('nsg')]",
            "location": "[parameters('Location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "comments": "---------- VIRTUAL NETWORK ----------",
            "name": "[concat('vnet-', parameters('Environment'),'-', parameters('Location'))]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[parameters('Location')]",
            "tags": {},
            "dependsOn": [
                "[variables('nsg')]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/21"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "10.0.0.4",
                        "10.0.0.5",
                        "168.63.129.16"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat('snet-identity-', parameters('Environment'),'-', parameters('Location'))]",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsg'))]"
                            },
                            "delegations": [],
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled"
                        }
                    }
                ],
                "virtualNetworkPeerings": [
                ],
                "enableDdosProtection": false,
                "enableVmProtection": false
            }
        }
    ]
}