{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "Domain": {
            "type": "string"
        },
        "DomainAbbreviation": {
            "type": "string"
        },
        "Environment": {
            "type": "string"
        },
        "KeyEncryptionKeyURL": {
            "type": "string"
        },
        "Location": {
            "type": "string"
        },
        "LocationAbbr": {
            "type": "string"
        },
        "Timestamp": {
            "type": "string"
        },
        "VmPassword": {
            "type": "securestring"
        },
        "VmUsername": {
            "type": "securestring"
        }
    },
    "variables": {
        "KeyVaultResourceGroup": "[concat('rg-shared-', parameters('Environment'), '-', parameters('Location'))]",
        "KeyVaultName": "[concat('kv-', parameters('DomainAbbreviation'), '-', parameters('Environment'), '-', parameters('Location'))]",
        "KeyVaultResourceID": "[resourceId(variables('KeyVaultResourceGroup'), 'Microsoft.KeyVault/vaults/', variables('KeyVaultName'))]",
        "LogAnalyticsWorkspace": "[concat('law-', parameters('Environment'), '-', parameters('Location'))]"
    },
    "resources": [
        {
            "comments": "---------- AVAILABILITY SET ----------",
            "name": "[concat('as-dc-', parameters('Environment'), '-', parameters('Location'))]",
            "type": "Microsoft.Compute/availabilitySets",
            "apiVersion": "2019-07-01",
            "location": "[parameters('Location')]",
            "properties": {
                "platformFaultDomainCount": 2,
                "platformUpdateDomainCount": 2
            },
            "sku": {
                "name": "Aligned"
            }
        },
        {
            "comments": "---------- NETWORK INTERFACE ----------",
            "name": "[concat('nic-dc-', parameters('Environment'), '-', parameters('Location'), '-0')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-08-01",
            "location": "[parameters('Location')]",
            "dependsOn": [],
            "tags": {
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig0",
                        "properties": {
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "10.0.0.4",
                            "subnet": {
                                "id": "[resourceId(subscription().subscriptionId, concat('rg-network-', parameters('Environment'),'-', parameters('Location')), 'Microsoft.Network/virtualNetworks/subnets', concat('vnet-', parameters('Environment'), '-', parameters('Location')), concat('snet-shared-', parameters('Environment'), '-',parameters('Location')))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "comments": "---------- VIRTUAL MACHINE ----------",
            "name": "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "location": "[parameters('Location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat('nic-dc-', parameters('Environment'), '-', parameters('Location'), '-0'))]",
                "[resourceId('Microsoft.Compute/availabilitySets', concat('as-dc-', parameters('Environment'), '-', parameters('Location')))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2s"
                },
                "osProfile": {
                    "computerName": "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]",
                    "adminUsername": "[parameters('VmUsername')]",
                    "adminPassword": "[parameters('VmPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat('disk-dc-', parameters('Environment'), '-', parameters('Location'), '-0-0')]",
                        "caching": "None",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }

                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat('nic-dc-', parameters('Environment'), '-', parameters('Location'), '-0'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": false
                    }
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', concat('as-dc-', parameters('Environment'), '-', parameters('Location')))]"
                }
            },
            "resources": [
                {
                    "comments": "---------- MICROSOFT MONITORING AGENT ----------",
                    "type": "extensions",
                    "name": "MicrosoftMonitoringAgent",
                    "apiVersion": "2017-03-30",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                        "type": "MicrosoftMonitoringAgent",
                        "typeHandlerVersion": "1.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "workspaceId": "[reference(resourceId(concat('rg-shared-', parameters('Environment'),'-', parameters('Location')), 'Microsoft.OperationalInsights/workspaces/', variables('LogAnalyticsWorkspace')), '2015-03-20').customerId]"
                        },
                        "protectedSettings": {
                            "workspaceKey": "[listKeys(resourceId(concat('rg-shared-', parameters('Environment'),'-', parameters('Location')), 'Microsoft.OperationalInsights/workspaces/', variables('LogAnalyticsWorkspace')), '2015-03-20').primarySharedKey]"
                        }
                    }
                },
                {
                    "comments": "---------- NETWORK WATCHER EXTENSION ----------",
                    "type": "extensions",
                    "apiVersion": "2017-03-30",
                    "name": "NetworkWatcherAgentWindows",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.NetworkWatcher",
                        "type": "NetworkWatcherAgentWindows",
                        "typeHandlerVersion": "1.4",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                        }
                    }
                },
                {
                    "comments": "---------- DEPENDENCY AGENT FOR AZURE MONITOR ----------",
                    "type": "extensions",
                    "apiVersion": "2017-03-30",
                    "name": "DependencyAgentWindows",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Monitoring.DependencyAgent",
                        "type": "DependencyAgentWindows",
                        "typeHandlerVersion": "9.5",
                        "autoUpgradeMinorVersion": true
                    }
                },
                {
                    "comments": "---------- AZURE DISK ENCRYPTION EXTENSION ----------",
                    "type": "extensions",
                    "name": "AzureDiskEncryption",
                    "location": "[parameters('Location')]",
                    "apiVersion": "2017-03-30",
                    "dependsOn": [
                        "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]",
                        "MicrosoftMonitoringAgent",
                        "NetworkWatcherAgentWindows",
                        "DependencyAgentWindows"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Azure.Security",
                        "type": "AzureDiskEncryption",
                        "typeHandlerVersion": "2.2",
                        "autoUpgradeMinorVersion": true,
                        "forceUpdateTag": "[guid(deployment().name)]",
                        "settings": {
                            "EncryptionOperation": "EnableEncryption",
                            "KeyVaultURL": "[reference(variables('KeyVaultResourceId'),'2016-10-01').vaultUri]",
                            "KeyVaultResourceId": "[variables('KeyVaultResourceID')]",
                            "KeyEncryptionKeyURL": "[parameters('KeyEncryptionKeyURL')]",
                            "KekVaultResourceId": "[variables('KeyVaultResourceID')]",
                            "KeyEncryptionAlgorithm": "RSA-OAEP",
                            "VolumeType": "All",
                            "ResizeOSDisk": false
                        }
                    }
                },
                {
                    "comments": "---------- DSC EXTENSION ----------",
                    "type": "extensions",
                    "name": "DSC",
                    "apiVersion": "2019-07-01",
                    "location": "[parameters('Location')]",
                    "dependsOn": [
                        "[concat('vm-dc-', parameters('Environment'), '-', parameters('LocationAbbr'), '-0')]",
                        "AzureDiskEncryption"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.77",
                        "autoUpgradeMinorVersion": true,
                        "forceUpdateTag": "[parameters('Timestamp')]",
                        "protectedSettings": {
                            "Items": {
                                "VmPassword": "[parameters('VmPassword')]"
                            }
                        },
                        "settings": {
                            "wmfVersion": "latest",
                            "modulesUrl": "",
                            "configurationFunction": "",
                            "properties": {
                                "Domain": "[parameters('Domain')]",
                                "DomainCreds": {
                                    "UserName": "[parameters('VmUsername')]",
                                    "Password": "PrivateSettingsRef:VmPassword"
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
}